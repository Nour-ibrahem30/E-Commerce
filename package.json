{
    "dependencies": {
        "bootstrap": "^5.3.7"
    },
    "devDependencies": {
        "prettier": "2.8.8",
        "sass": "1.69.5",
        "stylelint": "15.11.0",
        "stylelint-config-standard-scss": "9.0.0"
    },
    "scripts": {
        "format": "prettier --write .",
        "lint:styles": "stylelint \"scss/**/*.scss\"",
        "build:css": "sass scss:index.css --style=compressed --no-source-map && sass scss:css --style=compressed",
        "watch:css": "sass --watch scss:css"
    }
}
